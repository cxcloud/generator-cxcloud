{
  "name": "generator-cxcloud",
  "version": "0.4.0",
  "description": "A generator for CXCloud projects",
  "homepage": "https://docs.cxcloud.com",
  "author": {
    "name": "Sallar Kaboli",
    "email": "sallar@cxcloud.com"
  },
  "files": ["generators"],
  "main": "generators/app/index.js",
  "keywords": ["", "yeoman-generator"],
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo": "^0.20.1",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^6.1.1",
    "nsp": "^2.8.0",
    "prettier": "^1.11.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.9.1"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "generator-git-init": "^1.1.3",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/generators/app/templates/"
    ],
    "modulePathIgnorePatterns": ["<rootDir>/generators/app/templates/"]
  },
  "scripts": {
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "linters": {
      "*.js": ["eslint --fix", "git add"],
      "*.json": ["prettier --write", "git add"]
    },
    "ignore": ["**/generators/app/templates/**/*"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "tabWidth": 2,
          "singleQuote": true,
          "printWidth": 80
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "cxcloud/generator-cxcloud",
  "license": "MIT"
}
